<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Return to home"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toTopOf="@+id/searchBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/dropMenu"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_button" />

    <ImageButton
        android:id="@+id/chatBox"
        android:layout_width="52dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95
"
        app:layout_constraintStart_toEndOf="@+id/dropMenu"
        app:layout_constraintTop_toTopOf="@+id/dropMenu"
        app:srcCompat="@drawable/ic_menu_chat" />

    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Enter Book Title, Authors, ......"
        app:layout_constraintEnd_toEndOf="@+id/chatBox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dropMenu"
        app:layout_constraintTop_toBottomOf="@+id/chatBox" />
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="350dp"
        android:layout_height="61dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Recommended For You"
        android:textColor="#023047"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="121dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="170dp"
        android:layout_height="8dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4"
        app:navGraph="@navigation/my_nav" />


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="162dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/giannis">

        </ImageButton>

        <TextView
            android:text=" INSERT BOOK TITLE "
            android:gravity="center"
            android:textColor="#023047"
            android:textStyle="bold">

        </TextView>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="162dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tableLayout1"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/giannis">

        </ImageButton>
        <TextView
            android:text=" INSERT BOOK TITLE "
            android:gravity="center"
            android:textColor="#023047"
            android:textStyle="bold">

        </TextView>

    </TableLayout>


    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="162dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout1">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/midnightlibrary">

        </ImageButton>
        <TextView
            android:text=" INSERT BOOK TITLE "
            android:gravity="center"
            android:textColor="#023047"
            android:textStyle="bold">

        </TextView>


    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="162dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tableLayout3"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/midnightlibrary">

        </ImageButton>
        <TextView
            android:text=" INSERT BOOK TITLE "
            android:gravity="center"
            android:textColor="#023047"
            android:textStyle="bold">

        </TextView>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>